<persistence-unit name="com.stefanini.appointmentapp">
    <class>com.stefanini.appointmentapp.entities.Appointment</class>
    <class>com.stefanini.appointmentapp.entities.Department</class>
    <class>com.stefanini.appointmentapp.entities.Profile</class>
    <class>com.stefanini.appointmentapp.entities.Speciality</class>
    <class>com.stefanini.appointmentapp.entities.WeeklySchedule</class>
    <class>com.stefanini.appointmentapp.entities.DailySchedule</class>
    <class>com.stefanini.appointmentapp.entities.Holiday</class>
    <class>com.stefanini.appointmentapp.entities.Role</class>
    <class>com.stefanini.appointmentapp.entities.User</class>

    <exclude-unlisted-classes>true</exclude-unlisted-classes>
    <properties>
        <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
        <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://127.0.0.1:3306/appointment-app-back-db"/>
        <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.password" value="root"/>
    </properties>
</persistence-unit>